---
const { thumbnail, title, href, platform } = Astro.props;
---

<a href={href} target="_blank" class="group block">
    <div class="relative aspect-video overflow-hidden rounded-xl">
        <img
            src={thumbnail}
            alt={title}
            loading="lazy"
            class="w-full h-full object-cover group-active:scale-[0.98] transition-transform duration-200"
        />
    </div>

    <div class="mt-3 px-1">
        <p class="text-xs text-primary mb-1">
            {platform}
        </p>

        <h3 class="text-white text-sm font-semibold leading-tight line-clamp-2">
            {title}
        </h3>
    </div>
</a>
