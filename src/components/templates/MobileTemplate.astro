import Footer from "@components/organisms/Footer.astro";

const links = [
    {
        title: "YouTube",
        description: "Tutoriales de programación y contenido tech",
        icon: "play_circle",
        href: "https://www.youtube.com/@SoyNico_dev",
    },
    {
        title: "TikTok",
        description: "Tips rápidos de programación y tecnología",
        icon: "videocam",
        href: "https://www.tiktok.com/@soynico.edu",
    },
    {
        title: "Instagram",
        description: "Contenido personal y mi camino en tecnología",
        icon: "photo_camera",
        href: "https://www.instagram.com/ladner._.ariel",
    },
    {
        title: "GitHub",
        description: "Proyectos, código y trabajo open source",
        icon: "code",
        href: "https://github.com/anladner-clone",
    },
    {
        title: "LinkedIn",
        description: "Conectemos y compartamos proyectos",
        icon: "work",
        href: "https://www.linkedin.com/in/anladner/",
    },
];

const youtubeVideos = [
    {
        title: "¿Qué es SQL?",
